# Yap Unified Application Configuration
# Copy this file to .env and customize as needed

# Network name for Caddy-docker-proxy
CADDY_NETWORK=caddy

# Single domain for unified UI and API
APP_DOMAIN=app.localhost

# Host paths for model persistence
WHISPER_MODELS_PATH=/srv/whisper-asr/models
PIPER_MODELS_PATH=/srv/piper/models

# ASR (Whisper) settings
ASR_ENGINE=faster_whisper
ASR_MODEL=tiny.en
ASR_DEVICE=cuda
ASR_MODEL_PATH=/models

# LLM Proxy settings (optional - for chat feature)
# LLM_PROVIDER_URL=http://localhost:11434
# LLM_API_KEY=
# LLM_MODEL=gpt-3.5-turbo
# LLM_TIMEOUT=60
# LLM_MAX_TOKENS=2000
# LLM_TEMPERATURE=0.7
# LOG_REQUESTS=true
