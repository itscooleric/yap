# Yap Unified Application Configuration
# Copy this file to .env and customize as needed

# Network name for Caddy-docker-proxy
CADDY_NETWORK=caddy

# Single domain for unified UI and API
APP_DOMAIN=app.localhost

# Host paths for model persistence
WHISPER_MODELS_PATH=/srv/whisper-asr/models
PIPER_MODELS_PATH=/srv/piper/models

# ASR (Whisper) settings
ASR_ENGINE=faster_whisper
ASR_MODEL=tiny.en
ASR_DEVICE=cuda
ASR_MODEL_PATH=/models

# Metrics configuration (yap-metrics service)
# Track ASR and TTS usage with local-only metrics stored in SQLite
METRICS_ENABLED=true                    # Enable metrics tracking (default: true)
METRICS_STORE_TEXT=false                # Store text content in metrics (default: false, recommended)
METRICS_RETENTION_DAYS=30               # Days to retain metrics data (default: 30)
METRICS_MAX_EVENTS=5000                 # Maximum number of events to store (default: 5000)
METRICS_DATA_PATH=./data/metrics        # Container path for metrics database (maps to host volume)
