# Yap Configuration
# Copy this file to .env and customize as needed

CADDY_NETWORK=caddy

# Unified App Domain (recommended)
APP_DOMAIN=app.localhost

# Legacy separate domains (for asr/ and tts/ standalone deployments)
ASR_DOMAIN=asr.localhost
TTS_DOMAIN=tts.localhost

# Host paths for persistence
WHISPER_MODELS_PATH=/srv/whisper-asr/models
PIPER_MODELS_PATH=/srv/piper/models

# ASR model defaults
ASR_ENGINE=faster_whisper
ASR_MODEL=tiny.en
ASR_DEVICE=cuda
ASR_MODEL_PATH=/models

# Metrics configuration (yap-metrics service)
# Track ASR and TTS usage with local-only metrics
METRICS_ENABLED=true                    # Enable metrics tracking (default: true)
METRICS_STORE_TEXT=false                # Store text content in metrics (default: false)
METRICS_RETENTION_DAYS=30               # Days to retain metrics data (default: 30)
METRICS_MAX_EVENTS=5000                 # Maximum number of events to store (default: 5000)
METRICS_DATA_PATH=./data/metrics        # Host path for metrics database
