# Yap Configuration
# Copy this file to .env and customize as needed

CADDY_NETWORK=caddy

# Unified App Domain (recommended)
APP_DOMAIN=app.localhost

# Legacy separate domains (for asr/ and tts/ standalone deployments)
ASR_DOMAIN=asr.localhost
TTS_DOMAIN=tts.localhost

# Host paths for persistence
WHISPER_MODELS_PATH=/srv/whisper-asr/models
PIPER_MODELS_PATH=/srv/piper/models

# ASR model defaults
ASR_ENGINE=faster_whisper
ASR_MODEL=tiny.en
ASR_DEVICE=cuda
ASR_MODEL_PATH=/models

# Metrics configuration
METRICS_ENABLED=true
METRICS_STORE_TEXT=false
METRICS_RETENTION_DAYS=30
METRICS_MAX_EVENTS=5000
METRICS_DATA_PATH=./app/data/metrics

# LLM Proxy configuration
# Leave LLM_PROVIDER_URL empty to disable chat feature
LLM_PROVIDER_URL=
# Example: http://localhost:11434/v1/chat/completions (Ollama)
# Example: http://localhost:3000/v1/chat/completions (OpenWebUI)
LLM_API_KEY=
LLM_MODEL=llama3
LLM_TIMEOUT=60

